{
  "entryFile": "src/server.ts",
  "noImplicitAdditionalProperties": "ignore",
  "controllerPathGlobs": ["src/**/*.controller.ts"],
  "spec": {
    "outputDirectory": "./dist",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "./src",
    "iocModule": "src/config/tsoa.ioc"
  },
  "compilerOptions": {
    "paths": {
      "@root/*": ["src/*"],
      "@application": ["src/application"],
      "@application/*": ["src/application/*"],
      "@controllers": ["src/application/controllers"],
      "@controllers/*": ["src/application/controllers/*"],
      "@services": ["src/application/services"],
      "@services/*": ["src/application/services/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@domain": ["src/domain"],
      "@domain/*": ["src/domain/*"],
      "@user": ["src/domain/user"],
      "@user/*": ["src/domain/user/*"],
      "@product": ["src/domain/product"],
      "@product/*": ["src/domain/product/*"],
      "@infrastructure": ["src/infrastructure"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@logger": ["src/infrastructure/logger"],
      "@logger/*": ["src/infrastructure/logger/*"],
      "@middleware": ["src/infrastructure/middleware"],
      "@middleware/*": ["src/infrastructure/middleware/*"],
      "@entities": ["src/infrastructure/entities"],
      "@entities/*": ["src/infrastructure/entities/*"],
      "@repositories": ["src/infrastructure/repositories"],
      "@repositories/*": ["src/infrastructure/repositories/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
